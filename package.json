{
    "name": "transmission",
    "description": "transmission Ghost theme",
    "version": "1.11.0",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Nick",
        "email": "nick.abson@gmail.com",
        "url": "https://smallworkshop.co.uk"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nickabs/transmission.git"
    },
    "config": {
        "posts_per_page": 10,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 400
            },
            "m": {
                "width": 750
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1140
            },
            "xxl": {
                "width": 1920
            }
        },
        "card_assets": true,
        "custom": {
            "show_related_posts": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "show_post_subscription_banner": {
                "type": "boolean",
                "default": false,
                "group": "post",
                "description": "membership must be enabled to use this option"
            },
            "show_featured_posts": {
                "type": "boolean",
                "default": true,
                "group": "homepage"
            },
            "show_author": {
                "type": "boolean",
                "default": false,
                "group": "homepage"
            },
            "show_ghost_link": {
                "type": "boolean",
                "default": true,
                "group": "homepage"
            },
            "show_theme_link": {
                "type": "boolean",
                "default": true,
                "group": "homepage"
            },
            "show_home_page_subscription_banner": {
                "type": "boolean",
                "default": false,
                "group": "homepage",
                "description": "membership must be enabled to use this option"
            },
            "home_page_style": {
                "type": "select",
                "options": [
                    "List",
                    "Focus (right)",
                    "Focus (middle)",
                    "Focus (left)"
                ],
                "default": "Focus (left)",
                "group": "homepage"
            },
            "show_header_subscription_button": {
                "type": "boolean",
                "default": false,
                "description": "membership must be enabled to use this option"
            },
            "menu_style": {
                "type": "select",
                "options": [ "Minified", "Expanded" ],
                "default": "Expanded",
                "description": "Header menu style on wide screens"
            },
            "subscription_banner_heading": {
                "type": "text",
                "description": "Defaults to site title when empty"
            },
            "subscription_banner_description": {
                "type": "text",
                "description": "Defaults to site description when empty"
            },
            "google_analytics_id": {
                "type": "text",
                "description": "if you use google analytics, add your GA id here"
            },
            "article_collection_style": {
                "type": "select",
                "options": [
                    "List",
                    "Grid"
                ],
                "default": "Grid",
                "description": "tagged/author collection style"
            },
            "site_accent_color_dark": {
                "type": "color",
                "default": "#564d4d"
            },
            "site_accent_color_light": {
                "type": "color",
                "default": "#e6e6e6"
            }
        }
    },
    "scripts": {
        "dev": "gulp dev",
        "zip": "gulp zip",
        "test": "gscan ."
    },
    "devDependencies": {
        "beeper": "3.0.0",
        "cssnano": "7.0.1",
        "gulp": "5.0.0",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "6.0.0",
        "postcss": "8.4.38",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.0"
    },
    "dependencies": {
        "photoswipe": "^5.4.3",
        "prism-components": "^1.0.0",
        "prism-themes": "^1.9.0",
        "prismjs": "^1.29.0",
        "tocbot": "^4.25.0"
    }
}
