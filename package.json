{
    "name": "transmission",
    "description": "transmission Ghost theme",
    "version": "1.4.1",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Nick",
        "email": "nick.abson@gmail.com",
        "url": "https://smallworkshop.co.uk"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nickabs/transmission.git"
    },
    "config": {
        "posts_per_page": 10,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 400
            },
            "m": {
                "width": 750
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1140
            },
            "xxl": {
                "width": 1920
            }
        },
        "card_assets": true,
        "custom": {
            "show_featured_posts": {
                "type": "boolean",
                "default": true,
                "group": "homepage"
            },
            "show_related_posts": {
                "type": "boolean",
                "default": true,
                "group": "post"
            }
        }
    },
    "scripts": {
        "dev": "gulp dev",
        "zip": "gulp zip",
        "test": "gscan ."
    },
    "devDependencies": {
        "autoprefixer": "10.4.17",
        "beeper": "3.0.0",
        "cssnano": "6.0.3",
        "gulp": "4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "6.0.0",
        "postcss": "8.4.35",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.0"
    },
    "dependencies": {
        "photoswipe": "^5.4.3",
        "prism-components": "^1.0.0",
        "prism-themes": "^1.9.0",
        "prismjs": "^1.29.0",
        "tocbot": "^4.25.0"
    }
}
