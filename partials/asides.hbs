{{!-- markup for the table of contents and sidebar nav
    Parameters:
    aside-type: [ toc , sidebar, etc ]
--}}    

{{#match aside-type "toc"}}
    <aside class="table-of-contents {{layout}}">
        <button data-progress="0" aria-label="table-of-contents-mode" class="toc-toggle icon">
            <span class="toc-open-icon ">{{> "icons/toc-open"}}</span>
            <span class="toc-close-icon">{{> "icons/toc-close"}}</span>
        </button>
        <div class="toc-container">
            <h1 class="toc-title">{{t "Go to"}}</h1>
            {{!-- The table of content list will be inserted here --}}
            <div class="toc"></div>
        </div>
    </aside> 
{{/match}}

{{!-- share buttons and secondary nav items inserted here --}}
{{#match aside-type "sidebar"}} 
    <aside class="sidebar {{layout}} display-item-details">
        <nav class="sidebar-nav">   
            <button class="sidebar-show-descriptions-button icon" aria-label="expand sidebar">
            {{> "icons/sidebar-expand" }}
            </button>
            <button class="sidebar-hide-descriptions-button icon" aria-label="collapse sidebar">
                {{> "icons/sidebar-collapse" }}
            </button>
            {{navigation nav-type="sidebar-internal-tag"}}
            {{navigation type="secondary" nav-type="sidebar-secondary-links"}}
            {{navigation nav-type="sidebar-share"}}
        </nav>
    </aside>
{{/match}}
