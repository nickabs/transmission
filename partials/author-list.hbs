{{!-- list of authors and their profile images - used on article-cards etc --}}
<ul class="article-card-author-profile-images">
    {{#foreach authors}}
        <li class="article-card-author-profile-image">
            {{#if profile_image}}
                <a href="{{url}}">
                    <img src="{{img_url profile_image size="xs"}}" width="200" height="200" alt="{{name}}">
                </a>
            {{else}}
                <a href="{{url}}">
                    {{> "icons/avatar"}}
                </a>
            {{/if}}
        </li>
    {{/foreach}}
</ul>
<ul class="article-card-author-names">
    {{#foreach authors}}
        <li class="article-card-author-name">
            {{#if @first}}
                <a href="{{url}}">{{name}}</a>
            {{else}}
                <span>,</span>
                <a href="{{url}}">{{name}}</a>
            {{/if}}
        </li>
    {{/foreach}}
</ul>
