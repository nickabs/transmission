 <aside class="hero-header">
    {{#is "home"}}
        <div style="text-transform: lowercase;" class="hero-title">{{@site.title}}</div>
        {{#if @site.description}}
            <div class="hero-description">{{@site.description}}</div>
        {{/if}}
    {{/is}}

    {{#is "tag"}}
        <div class="hero-title ">{{name}}</div>
        {{#if description}}
            <div class="hero-description">{{description}}</div>
        {{/if}}
    {{/is}}

    {{#is "post,page"}}
        <div class="hero-title">{{title}}</div>
    {{/is}}
    {{#is "post" }}
        <div class="hero-date">
            <time datetime="{{date format="YYYY-MM-DD"}}">
                {{date published_at}}
            </time>
        </div>
        {{#if tags}}
            <div class="hero-tags">
                Tags:
                {{ tags seperator=" |" }}
            </div>
        {{/if}}
     {{/is}}

    {{!-- include the featured image for posts (it is used in the hero banner) --}}
    {{#is "post"}}
        <figure class="hero-image">
        {{#if feature_image }}
            <img
                srcset="{{> srcset}}"
                src="{{img_url feature_image size="l"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            >
        {{else}}
            {{#if @site.logo}}
                <img src="{{@site.logo}}" alt="{{@site.title}}">
            {{else}}
                {{@site.title}}
            {{/if}}
        {{/if}}
        </figure>
    {{/is}}
</aside>